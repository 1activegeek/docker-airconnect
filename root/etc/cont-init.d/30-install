#!/bin/bash

# Set arch
echo "HOSTTYPE is $HOSTTYPE"
if [[ "$HOSTTYPE" =~ ^(arm|armv7)$ ]]; then
  arc="arm"
elif [ "$HOSTTYPE" == "armv5" ]; then
  arc="arm5"
elif [ "$HOSTTYPE" == "arm64" ]; then
  arc="aarch64"
elif [[ "$HOSTTYPE" =~ ^(x86|386|i386)$ ]]; then
  arc="x86"
else
  arc="x86-64"
fi
echo "Chosen architecture is $arc"

# Grab latest versions of the app
wget -O /bin/airupnp https://raw.githubusercontent.com/philippe44/AirConnect/master/bin/airupnp-${arc} && chmod +x /bin/airupnp
wget -O /bin/aircast https://raw.githubusercontent.com/philippe44/AirConnect/master/bin/aircast-${arc} && chmod +x /bin/aircast

# Insert runtime commands if users has entered them as environment variables
[ -z "$AIRUPNP_VAR" ] || sed -i 's;command=/bin/airupnp -l 1000:2000;command=/bin/airupnp '"$AIRUPNP_VAR"';' /etc/supervisord.conf
[ -z "$AIRCAST_VAR" ] || sed -i 's;command=/bin/aircast;command=/bin/aircast '"$AIRCAST_VAR"';' /etc/supervisord.conf
